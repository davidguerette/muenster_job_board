<%= form_for @job do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <%= f.collection_select(:company_id, @companies, :id, :name) %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
